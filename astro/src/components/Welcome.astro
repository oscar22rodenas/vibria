---
// Realiza la solicitud a la API de WordPress en el lado del servidor
const response = await fetch('http://127.0.0.1:8000/wp-json/wp/v2/posts');
const posts = await response.json();
---

<html>
  <head>
    <title>Blog</title>
  </head>
  <body>
    <h1>Mis Publicaciones de Blog</h1>
    <ul>
      {posts.map((post) => (
        <li key={post.id}>
          <h2>{@post.title.rendered}</h2>
          <p>{@post.excerpt.rendered}</p>
          <a href={post.link}>Leer m√°s</a>
        </li>
      ))}
    </ul>
  </body>
</html>
