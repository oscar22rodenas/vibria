---
// src/components/LanguageSwitcher.astro
const currentLang = Astro.props.currentLang || 'es';
---

<nav>
  <ul>
    <li><a href="/es" class={currentLang === 'es' ? 'active' : ''}>Español</a></li>
    <li><a href="/ca" class={currentLang === 'ca' ? 'active' : ''}>Català</a></li>
    <li><a href="/en" class={currentLang === 'en' ? 'active' : ''}>English</a></li>
  </ul>
</nav>

<style>
  nav ul {
    list-style-type: none;
  }

  nav ul li {
    display: inline;
    margin-right: 10px;
  }

  nav ul li a.active {
    font-weight: bold;
    color: #007BFF;
  }
</style>
